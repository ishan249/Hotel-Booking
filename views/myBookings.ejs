<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
          <link href='https://fonts.googleapis.com/css?family=Albert Sans' rel='stylesheet'>
    <title>My Bookings</title>
    <style>
        .header {
            height: 70px;
            background-color: black;
            text-align: center;
        }

        .headerText {
            /* margin-top: 20px; */
            padding-top: 15px;
            font-family: 'Albert Sans';
            font-size: 25px;
            color: white;
        }

        .myBookings {
            margin: 10px 10px 10px 0;
        }

        .main-blog {
            display: flex;
              margin-top: 8px;
              box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
              margin: 15px;
              width: 300px;
              border-radius: 12px;
              background-color: whitesmoke;
              font-family: 'Albert Sans';
        }

        .blog {
            color: black;
            padding: 15px;
            /* border: 2px black solid; */
        }

        .logo {
            height: 150px;
            width: 180px;
            padding: 10px;
            position: relative;
            border-radius: 20px;
        }

        input {
        margin: 8px;
        height: 40px;
        width: 260px;
        border-radius: 3px;
        border: 1px black solid;
        background: transparent;
        fill: none;
      }

        .mainPart {
            border-radius: 5px;
            color: black;
            background-color: whitesmoke;
            border: 2px black solid;
        }

        .userName {
            font-family: 'Albert Sans';
            font-size: 25px;
        }
        .idCopy{
            color: white;
            background-color: rgb(76, 134, 243);
            border: none;
            border-radius: 5px;
            margin: 5px;
	    padding: 5px 10px;
	    font-family:'Albert Sans';
        }
        .noOfBookings{
          padding-left:10px;
          font-family:'Albert Sans';
          font-size: 25px;
          font-weight: bold;
        }
        .btn{
            margin: 8px;
            height: 36px;
            text-align: center;
            color: white;
           
            /* width: 100px; */
        }
        .btn:hover{
            color: black;
            background-color: white;
        }
    </style>
</head>

<body>
    <div class="header">
        <div class="headerText">Your Bookings</div>
    </div>
    <form class="myBookings" method="post" action="/showBookings">

        <input type="email" name="Email" placeholder="Your Email">
        <br>
        <button type="submit" class="btn btn-dark">Search</button>
    </form>

    <form action="/CancelBooking" method="post" class="cancel">
        <p style="font-family: 'Albert Sans'; margin-left: 6px">
          (Only Enter Booking ID for cancellation. You can get your Booking ID
          below)
        </p>
        <input type="text" name="Bookingid" placeholder="Enter your ID" />
        <br />
        <button type="submit" class="btn btn-dark">Cancel Booking</button>
      </form>
    <div class="MyBookingCard">
      <span class="noOfBookings">Total Bookings : <%= totalBookings %></span>
      <div class="d-flex flex-wrap justify-content-around">
        <% hotelusers.forEach(function(Username){ %>
            <div class="main-blog">
                <div class="blog">
                    <div class="userName">
                        <b> Name : </b>
                        <%= Username.name %>
                    </div>
                    <hr>
                    <div class="userInfo">

                        <ul class="userInfo">

                            <li> <b>Booking Id : </b>
                               <span id="bookingIdText"><%=  Username.BookingId %></span>
                            </li>
                            <li> <b>Email address : </b>
                                <%= Username.email %>
                            </li>
                            <li> <b>Check In : </b>
                                <%= Username.checkInDate %>
                            </li>
                            <li> <b>Check Out : </b>
                                <%= Username.checkOutDate %>
                            </li>
                            <li> <b>Phone Number : </b>
                                <%= Username.phoneNumber %>
                            </li>
                            <li> <b>Number of people : </b>
                                <%= Username.noOfPeople %>
                            </li>
                            <li> <b>Type of Room : </b>
                                <%= Username.typeOfRoom %>
                            </li>
                        </ul>
                    </div>
                </div>
                <hr>
                <br>

            </div>

            <% }); %>
      </div>
    </div>
    <script>
        function copybutton(){
           let copyText = document.getElementById("bookingIdText").innerText;
            console.log(copyText);
	    copyText.select();
            document.execCommand("copy");
	    alert("copied to clipboard");
        }
        </script>
</body>

